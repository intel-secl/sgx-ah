[Unit]
Description=SGX Attestation Hub

[Service]
Type=simple
User=sah
Group=sah
ExecStart=/usr/bin/sgx-attestation-hub run
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
Restart=on-failure
PermissionsStartOnly=true
RuntimeDirectory=sgx-attestation-hub
RuntimeDirectoryMode=0775

[Install]
WantedBy=multi-user.target
